<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd">

	<!-- ====== Sourcing Service ====== -->
	<alias name="defaultOaaSourcingService" alias="oaaCommerceSourcingService" />
	<bean id="defaultOaaSourcingService"
		class="com.sap.retail.oaa.commerce.services.sourcing.impl.DefaultSourcingService">
		<property name="sourcingResultHandler" ref="oaaSourcingResultHandler" />
		<property name="cartMapper" ref="oaaSourcingRequestMapper" />
		<property name="authenticationService" ref="oaaCommerceAuthenticationService" />
		<property name="httpHeaderProvider" ref="oaaCommerceHttpHeaderProvider" />
		<property name="urlProvider" ref="oaaCommerceURLProvider" />
		<property name="restInitializationStrategy" ref="oaaCommerceRestInitializationStrategy"></property>
		<property name="restTemplate" ref="restTemplate"></property>
		<property name="httpEntityBuilder" ref="oaaCommerceRestReservationHttpEntityBuilder" />
	</bean>

	<alias name="defaultOaaSourcingResultHandler" alias="oaaSourcingResultHandler" />
	<bean id="defaultOaaSourcingResultHandler"
		class="com.sap.retail.oaa.commerce.services.sourcing.impl.DefaultSourcingResultHandler">
		<property name="modelService" ref="modelService" />
		<property name="baseStoreService" ref="baseStoreService" />
		<property name="pointOfServiceGenericDao" ref="pointOfServiceGenericDao" />
		<property name="serviceUtils" ref="oaaServiceUtils" />
	</bean>

	<alias name="defaultOaaSourcingRequestMapper" alias="oaaSourcingRequestMapper" />
	<bean id="defaultOaaSourcingRequestMapper"
		class="com.sap.retail.oaa.commerce.services.sourcing.impl.DefaultSourcingRequestMapper">
		<property name="sapCoreConfigurationService" ref="sapCoreConfigurationService" />
		<property name="serviceUtils" ref="oaaServiceUtils" />
	</bean>

	<alias name="defaultOaaSourcingStrategy" alias="oaaCommerceSourcingStrategy" />
	<bean id="defaultOaaSourcingStrategy"
		class="com.sap.retail.oaa.commerce.services.sourcing.strategy.impl.DefaultSourcingStrategy">
		<property name="sourcingService" ref="oaaCommerceSourcingService" />
	</bean>


	<!-- ====== Reservation Service ====== -->
	<alias name="defaultOaaReservationService" alias="oaaCommerceReservationService" />
	<bean id="defaultOaaReservationService"
		class="com.sap.retail.oaa.commerce.services.reservation.impl.DefaultReservationService">
		<property name="authenticationService" ref="oaaCommerceAuthenticationService" />
		<property name="httpHeaderProvider" ref="oaaCommerceHttpHeaderProvider" />
		<property name="requestMapper" ref="oaaReservationRequestMapper" />
		<property name="urlProvider" ref="oaaCommerceURLProvider" />
		<property name="restInitializationStrategy" ref="oaaCommerceRestInitializationStrategy" />
		<property name="restTemplate" ref="restTemplate" />
		<property name="httpEntityBuilder" ref="oaaCommerceRestReservationHttpEntityBuilder" />
	</bean>

	<alias name="defaultOaaAuthenticationService" alias="oaaCommerceAuthenticationService" />
	<bean id="defaultOaaAuthenticationService"
		class="com.sap.retail.oaa.commerce.services.rest.util.impl.AuthenticationService">
		<property name="httpHeaderProvider" ref="oaaCommerceHttpHeaderProvider" />
		<property name="urlProvider" ref="oaaCommerceURLProvider" />
		<property name="restTemplate" ref="restTemplate"></property>
		<property name="httpEntityBuilder" ref="oaaCommerceRestReservationHttpEntityBuilder" />
	</bean>

	<alias name="defaultOaaHttpHeaderProvider" alias="oaaCommerceHttpHeaderProvider" />
	<bean id="defaultOaaHttpHeaderProvider"
		class="com.sap.retail.oaa.commerce.services.rest.util.impl.DefaultHttpHeaderProvider">
	</bean>


	<alias name="defaultOaaURLProvider" alias="oaaCommerceURLProvider" />
	<bean id="defaultOaaURLProvider"
		class="com.sap.retail.oaa.commerce.services.rest.util.impl.DefaultURLProvider">
	</bean>

	<alias name="defaultOaaReservationRequestMapper" alias="oaaReservationRequestMapper" />
	<bean id="defaultOaaReservationRequestMapper"
		class="com.sap.retail.oaa.commerce.services.reservation.impl.DefaultReservationRequestMapper">
	</bean>

	<alias name="defaultOaaRestInitializationStrategy" alias="oaaCommerceRestInitializationStrategy" />
	<bean id="defaultOaaRestInitializationStrategy"
		class="com.sap.retail.oaa.commerce.services.rest.util.impl.DefaultRestInitializationStrategy">
		<property name="sapGlobalConfigurationService" ref="sapCoreSAPGlobalConfigurationService" />
		<property name="sapCoreConfigurationService" ref="sapCoreConfigurationService" />
	</bean>

	<alias name="defaultOaaRestReservationHttpEntityBuilder" alias="oaaCommerceRestReservationHttpEntityBuilder" />
	<bean id="defaultOaaRestReservationHttpEntityBuilder"
		class="com.sap.retail.oaa.commerce.services.rest.util.impl.DefaultHttpEntityBuilder">
	</bean>

	<!-- ====== ATP Service ====== -->
	<alias name="defaultOaaATPResultHandler" alias="oaaATPResultHandler" />
	<bean id="defaultOaaATPResultHandler"
		class="com.sap.retail.oaa.commerce.services.atp.impl.DefaultATPResultHandler">
		<property name="serviceUtils" ref="oaaServiceUtils" />
	</bean>

	<alias name="defaultOaaATPService" alias="oaaCommerceATPService" />
	<bean id="defaultOaaATPService"
		class="com.sap.retail.oaa.commerce.services.atp.impl.DefaultATPService">
		<property name="atpResultHandler" ref="oaaATPResultHandler" />
		<property name="httpHeaderProvider" ref="oaaCommerceHttpHeaderProvider" />
		<property name="urlProvider" ref="oaaCommerceURLProvider" />
		<property name="restInitializationStrategy" ref="oaaCommerceRestInitializationStrategy" />
		<property name="restTemplate" ref="restTemplate" />
		<property name="httpEntityBuilder" ref="oaaCommerceRestReservationHttpEntityBuilder" />
		<property name="serviceUtils" ref="oaaServiceUtils" />
	</bean>

	<alias name="defaultOaaATPAggregationStrategy" alias="oaaCommerceATPAggregationStrategy" />
	<bean id="defaultOaaATPAggregationStrategy"
		class="com.sap.retail.oaa.commerce.services.atp.strategy.impl.DefaultATPAggregationStrategy">
	</bean>

	<!-- ====== Cart Strategies ====== -->

	<alias name="defaultOaaCartAdjustmentStrategy" alias="oaaCartAdjustmentStrategy" />
	<bean id="defaultOaaCartAdjustmentStrategy"
		class="com.sap.retail.oaa.commerce.services.order.impl.DefaultSapOaaCartAdjustmentStrategy">
		<property name="oaaStockService" ref="commerceStockService" />
	</bean>

	<alias name="defaultOaaAddToCartStrategy" alias="commerceAddToCartStrategy" />
	<bean id="defaultOaaAddToCartStrategy"
		class="com.sap.retail.oaa.commerce.services.order.impl.DefaultSapOaaCommerceAddToCartStrategy"
		parent="defaultCommerceAddToCartStrategy">
		<property name="oaaCartAdjustmentStrategy" ref="oaaCartAdjustmentStrategy" />
	</bean>

	<alias name="defaultOaaUpdateCartEntryStrategy" alias="commerceUpdateCartEntryStrategy" />
	<bean id="defaultOaaUpdateCartEntryStrategy"
		class="com.sap.retail.oaa.commerce.services.order.impl.DefaultSapOaaCommerceUpdateCartEntryStrategy"
		parent="defaultCommerceUpdateCartEntryStrategy">
		<property name="oaaCartAdjustmentStrategy" ref="oaaCartAdjustmentStrategy" />
	</bean>

	<alias name="defaultOaaCartValidationStrategy" alias="cartValidationStrategy" />
	<bean id="defaultOaaCartValidationStrategy"
		class="com.sap.retail.oaa.commerce.services.strategies.impl.DefaultSapOaaCartValidationStrategy"
		parent="defaultCartValidationStrategy">
		<property name="oaaStockService" ref="commerceStockService" />
	</bean>


	<!-- ====== Stock Service ====== -->
	<alias name="defaultOaaCommerceStockService" alias="commerceStockService" />
	<bean id="defaultOaaCommerceStockService"
		class="com.sap.retail.oaa.commerce.services.stock.impl.DefaultSapOaaCommerceStockService"
		parent="defaultCommerceStockService">
		<property name="atpService" ref="oaaCommerceATPService" />
		<property name="stockLevelStatusStrategy" ref="stockLevelStatusStrategy" />
		<property name="pointOfServiceDao" ref="pointOfServiceDao" />
		<property name="atpAggregationStrategy" ref="oaaCommerceATPAggregationStrategy" />
	</bean>

	<!-- RestTemplate -->
	<bean id="restTemplate" class="org.springframework.web.client.RestTemplate"
		scope="prototype">
			<constructor-arg>
				<bean
					class="org.springframework.http.client.BufferingClientHttpRequestFactory">
					<constructor-arg>
						<bean
							class="org.springframework.http.client.SimpleClientHttpRequestFactory" />
					</constructor-arg>
				</bean>
			</constructor-arg>
	</bean>

	<!-- Value resolver for rough stock indicator -->
	<bean id="roughStockIndicatorValueResolver"
		class="com.sap.retail.oaa.commerce.services.search.solrfacetsearch.provider.impl.RoughStockIndicatorValueResolver"
		parent="abstractValueResolver">
		<property name="oaaStockService" ref="commerceStockService" />
		<property name="baseStoreService" ref="baseStoreService" />
	</bean>

	<!-- Overwrite stockLevelStatusStrategy for rough stock indicator -->
	<alias alias="stockLevelStatusStrategy" name="defaultSapOaaStockLevelStatusStrategy" />
	<bean id="defaultSapOaaStockLevelStatusStrategy"
		class="com.sap.retail.oaa.commerce.services.stock.impl.DefaultSapOaaStockLevelStatusStrategy"
		parent="defaultStockLevelStatusStrategy">
	</bean>


	<alias name="defaultSapOaaPickupAvailabilityStrategy" alias="pickupAvailabilityStrategy" />
	<bean id="defaultSapOaaPickupAvailabilityStrategy"
		class="com.sap.retail.oaa.commerce.services.strategies.impl.DefaultSapOaaPickupAvailabilityStrategy">
		<property name="pickupStrategy" ref="pickupStrategy" />
		<property name="commerceStockService" ref="commerceStockService" />
	</bean>

	<alias name="defaultSapOaaServiceUtils" alias="oaaServiceUtils" />
	<bean id="defaultSapOaaServiceUtils"
		class="com.sap.retail.oaa.commerce.services.common.util.impl.DefaultServiceUtils">
		<property name="timeZone" value="UTC" />
		<property name="dateFormat" value="yyyy-MM-dd" />
		<property name="leadingZeroFormatter" value="%018d" />
	</bean>

	<!--  CommercePlaceOrderMethodHook -->
	<alias name="defaultOaaCommercePlaceOrderMethodHook" alias="oaaCommercePlaceOrderMethodHook" />
	<bean id="defaultOaaCommercePlaceOrderMethodHook"
		class="com.sap.retail.oaa.commerce.services.order.hook.SapOaaCommercePlaceOrderMethodHook">
		<property name="sourcingService" ref="oaaCommerceSourcingService" />
	</bean>

	<bean id="customCommercePlaceOrderMethodHooksMergeDirective"
		depends-on="commercePlaceOrderMethodHooks" parent="listMergeDirective">
		<property name="add" ref="oaaCommercePlaceOrderMethodHook" />
	</bean>

</beans>
